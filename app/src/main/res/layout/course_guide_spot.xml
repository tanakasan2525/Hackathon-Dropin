<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="@drawable/course_spot_bg"
	android:id="@+id/course_guide_spot">

	<ImageView
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:id="@+id/course_guide_spot_thumb"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="スポット名"
			android:id="@+id/course_guide_spot_name"
			android:textStyle="bold"
			android:textColor="#469df5"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Medium Text"
			android:id="@+id/course_guide_spot_desc"
			android:textColor="#333333"/>
	</LinearLayout>

</LinearLayout>
