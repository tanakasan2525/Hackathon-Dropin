<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient
				android:startColor="#E9573F"
				android:endColor="#E9573F"
				android:angle="90"
				/>
			<corners
				android:bottomRightRadius="3dp"
				android:bottomLeftRadius="3dp"
				android:topLeftRadius="3dp"
				android:topRightRadius="3dp"
				/>
			<stroke
				android:width="4px"
				android:color="#E9573F"
				/>
			<padding
				android:left="7dp"
				android:top="7dp"
				android:right="7dp"
				android:bottom="7dp"
				/>
		</shape>
	</item>

	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<gradient
				android:startColor="#E9573F"
				android:endColor="#E9573F"
				android:angle="90"
				/>
			<corners
				android:bottomRightRadius="3dp"
				android:bottomLeftRadius="3dp"
				android:topLeftRadius="3dp"
				android:topRightRadius="3dp"
				/>
			<stroke
				android:width="2px"
				android:color="#E9573F"
				/>
			<padding
				android:left="7dp"
				android:top="7dp"
				android:right="7dp"
				android:bottom="7dp"
				/>
		</shape>
	</item>
	<item>
		<shape >
			<gradient
				android:startColor="#FC6E51"
				android:endColor="#FC6E51"
				android:angle="90"
				/>
			<corners
				android:bottomRightRadius="3dp"
				android:bottomLeftRadius="3dp"
				android:topLeftRadius="3dp"
				android:topRightRadius="3dp"
				/>
			<stroke
				android:width="1px"
				android:color="#E9573F"
				/>
			<padding
				android:left="7dp"
				android:top="7dp"
				android:right="7dp"
				android:bottom="7dp"
				/>
		</shape>
	</item>

</selector>

